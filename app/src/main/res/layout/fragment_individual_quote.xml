<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gradEnd"
    tools:context=".IndividualQuoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp">

            <TextView
                android:id="@+id/quote_full"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/quoteBackground"
                android:padding="16dp"
                android:text="@string/full_quote"
                android:textColor="@color/white"
                android:textSize="35sp" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/shareButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/corner_radius"
                android:elevation="5dp"
                app:srcCompat="?attr/actionModeShareDrawable" />

            <ImageButton
                android:id="@+id/copyButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:background="@drawable/corner_radius"
                android:elevation="5dp"
                app:srcCompat="?attr/actionModeCopyDrawable" />

            <ImageButton
                android:id="@+id/favoriteButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/corner_radius"
                android:elevation="5dp"
                app:srcCompat="@drawable/ic_favorite_border_black_24dp" />
        </LinearLayout>

    </LinearLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/topAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-8453607245436940/1008778157" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottomAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-8453607245436940/6508516849" />

</FrameLayout>